<!--    </filter-mapping>-->

    <filter>
        <filter-name>ExampleFil</filter-name>
        <filter-class>dev.josiah.filters.ExampleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ExampleFil</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>